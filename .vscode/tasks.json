{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "[canvas-lord] tsc: build",
			"type": "shell",
			"command": "pnpm -F canvas-lord build",
			"problemMatcher": ["$tsc"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			}
		},
		{
			"label": "[canvas-lord] tsc: watch",
			"type": "shell",
			"command": "pnpm -F canvas-lord watch",
			"problemMatcher": ["$tsc-watch"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"runOptions": {
				"runOn": "folderOpen"
			}
		},
		{
			"label": "tsc: watch - transpiler/tsconfig.json",
			"type": "typescript",
			"tsconfig": "transpiler/tsconfig.json",
			"option": "watch",
			"problemMatcher": ["$tsc-watch"],
			"group": "build",
			"presentation": {
				"reveal": "always",
				"panel": "new"
			},
			"runOptions": {
				// "runOn": "folderOpen"
			}
		}
	]
}
