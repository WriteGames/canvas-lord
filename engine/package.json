{
	"name": "canvas-lord",
	"private": true,
	"version": "0.7.0",
	"description": "An HTML5 game engine",
	"main": "canvas-lord.js",
	"type": "module",
	"exports": {
		".": "./bin/canvas-lord.js",
		"./*": "./bin/*"
	},
	"packageManager": "pnpm@9.8.0",
	"engines": {
		"node": "^22",
		"pnpm": "^9"
	},
	"scripts": {
		"build": "tsc --p tsconfig.build.json && pnpm build:math",
		"build:math": "tsc --outDir bin/math --declaration false --p node_modules/@writegames.com/game-math/tsconfig.build.json",
		"postbuild": "echo \"postbuild\"",
		"test": "vitest --pool=forks",
		"lint": "eslint .",
		"watch": "tsc-watch --p tsconfig.build.json --onSuccess \"pnpm postbuild\"",
		"update-third-party-imports": "node scripts/update-third-party-imports.js",
		"bump-version": "node scripts/bump-version.js && pnpm build"
	},
	"keywords": [],
	"author": "Write Games",
	"license": "ISC",
	"devDependencies": {
		"@writegames.com/game-math": "0.1.2",
		"@writegames.com/style-guide": "workspace:*",
		"canvas": "^3.2.0",
		"eslint": "8.56.0",
		"jsdom": "^23.2.0",
		"tsc-watch": "^7.2.0",
		"typescript": "5.9.3",
		"vitest": "^1.2.0"
	}
}
